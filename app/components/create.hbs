<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    /* Custom styles for password strength indicators */
    .password-strength-indicator {
      height: 5px;
      margin-top: 5px;
    }

    .custom-width {
      width: 1000px; /* Adjust the width value as needed */
    }

    .custom-height {
      height: 300px;
    }
    .strength-weak {
      background-color: #dc3545;
    }

    .strength-medium {
      background-color: #ffc107;
    }

    .strength-strong {
      background-color: #28a745;
    }

    /* Reduce margin between header and body */
    .form-label {
      margin-bottom: 5px; /* Adjust the margin value as needed */
    }
  </style>
</head>

<body>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
  <form {{on "submit" this.onSubmit}}>
    <div class="mb-3">
      <label class="form-label">Ticket Title</label>
      <input type="text" name="title" value="" class="form-control custom-width" required>
    </div>
    <div class="col-sm-12">
      <label class="form-label">Description</label>
      <input type="text" name="description" value="" class="form-control custom-height" required>
    </div>
    {{!--<div class="mb-3">
      <label class="form-label">Comments</label>
      <input type="text" name="comments" value="" class="form-control" id="comment">
    </div>--}}
    <div class="mb-3">
      <label for="attachmentInput" class="form-label">Attach File</label>
      <input type="file" name="attachment" class="form-control" id="attachmentInput">
    </div>
    <div>
      <button type="submit" class="btn btn-primary float-end col-md-3">Submit</button>
    </div>

  </form>
</div>
</body>

</html>
